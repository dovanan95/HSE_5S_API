<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="200000000" /> <!--50MB-->
      </requestFiltering>
    </security>
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet" arguments=".\HSE_5S_API.dll" stdoutLogEnabled="false" stdoutLogFile=".\logs\stdout" hostingModel="inprocess" />
    </system.webServer>
  </location>
    <system.webServer>
        <httpErrors errorMode="DetailedLocalOnly" />
    </system.webServer>
    <location path="" overrideMode="Deny">
        <system.ftpServer>
            <security>
            </security>
        </system.ftpServer>
    </location>
    <location path="" overrideMode="Allow">
        <system.ftpServer>
            <security>
                <requestFiltering>
                    <fileExtensions />
                    <requestLimits maxAllowedContentLength="20000000" />
                    <hiddenSegments />
                    <denyUrlSequences />
                </requestFiltering>
            </security>
        </system.ftpServer>
    </location>
</configuration>